---
interface Props {
  name: string;
  image: string;
  description: string;
  tecnologies: any;
  demoURL: string;
}

const { name, image, description, tecnologies, demoURL } = Astro.props;
import Tag from "./Tag.astro";
import Button from "./Button.astro";
import Row from "./upRow.astro";
---

<article class="card">
  <div class="img-container">
    <img src={image} alt={description.split("", 3).join("")} />
  </div>
  <div class="card-body">
    <div class="info">
      <h2 class="card-name">{name}</h2>
      <p class="card-description">{description}</p>
      <div class="tecnologies">
        {
          tecnologies.map((tec: { name: any; icon: any }) => (
            <Tag name={tec.name} icon={tec.icon} />
          ))
        }
      </div>
    </div>
    <div class="btn">
      <Button url={demoURL} title="View Demo">
        <Row slot="2" class="rowUp" />
      </Button>
    </div>
  </div>

  <style>
    .card {
      display: flex;
      gap: 50px;
      .rowUp {
        width: 12px;
        rotate: 90deg;
        animation: moveRigth 1s alternate infinite;
      }
    }
    .img-container {
      border-radius: 10px;
      min-width: 500px;
      height: 300px;
      overflow: hidden;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        aspect-ratio: 16/9;
      }
    }
    .card-body {
      .info {
        .card-name {
          color: var(--text);
          font-size: 30px;
        }
        .card-description {
          /* margin-left: 20px; */
          line-height: 1.7;
          text-wrap: balance;
        }
      }

      .btn {
        display: flex;
        justify-content: end;
        .anchor-demo {
          padding: 8px 14px;
          border-radius: 20px;
          color: #fff;
          text-decoration: none;
          font-weight: bold;
          background: #1a1ae5;
        }
      }

      .tecnologies {
        display: flex;
        gap: 20px;
        margin-block: 20px;
      }
    }

    @keyframes moveRigth {
      to {
        transform: translateY(-4px);
      }
    }
  </style>
</article>
