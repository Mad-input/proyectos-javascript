---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Country Quiz" url="/favicon.svg">
  <div class="quiz">
    <header>
      <h2 class="quiz-title">Country Quiz</h2>
      <ul class="indicators"></ul>
    </header>
    <div class="question-container">
      <div class="loader-container">
        <div class="loader"></div>
        <span>Cargando...</span>
      </div>
    </div>
    <small class="progress"></small>
  </div>
</Layout>

<script>
  import Quiz from "../jsProjects/Quiz.js";
  import * as dataCountry from "../data/data-quiz.js";
  const data = dataCountry.questions.slice(0, 10); // Tomar solo las primeras 10 preguntas

  const options = {
    containerIndicator: document.querySelector(".indicators"),
    containerQuestion: document.querySelector(".question-container"),
    elementProgess: document.querySelector(".progress"),
    $quiz: document.querySelector(".quiz"),
    sounds: {
      error: new Audio("/audio/error.mp3"),
      send: new Audio("/audio/shuffleandbridge.mp3"),
      correct: new Audio("/audio/correct-choice.mp3"),
      congratulations: new Audio("/audio/congrasts.mp3"),
    },
    icons: {
      error: "/img/Close_round_fill.svg",
      check: "/img/Check_round_fill.svg",
    },
  };

  const QuizCountries = new Quiz(data, options);

  QuizCountries.init();
</script>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
  :root {
    --text-color: #c9cdf7;
    --hoverAndActive: linear-gradient(#e65895, #bc6be8);
    --bg_quiz: #393f6e;
    --bg_second: #343964;
    --text_2: #e2e4f3;
    --radius: 1.875rem;
    --bg-body: url("/img/bg.jpg") no-repeat top/cover;
    font-size: 16px;
  }

  * {
    font-family: "Be Vietnam Pro", sans-serif;
  }

  body {
    background: var(--bg-body) !important;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .btn-again {
    border: none;
    background: var(--hoverAndActive);
    color: #fff;
    padding: 1.25rem 2.5rem;
    width: 55%;
    border-radius: 0.625rem;
    font-size: 1.125rem;
    font-weight: 500;
    cursor: pointer;
    transition: scale 0.3s ease;
    &:hover {
      scale: 0.95;
    }
  }
  .quiz {
    display: flex;
    flex-direction: column;
    border-radius: var(--radius);
    background: var(--bg_second);
    padding: 2.5rem 1.875rem;
    width: 60vw;
    max-width: 840px;
    margin-inline: auto;
    box-shadow: 1.25rem 0.625rem 1.25rem 0 rgba(0, 0, 0, 0.3);

    header {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      .quiz-title {
        color: var(--text-color);
        font-size: 1.125rem;
        text-align: center;
      }
    }

    .indicators {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      gap: 20px;
      margin-block: 1.25rem;
      .indicator {
        --size: 3.125rem;
        display: grid;
        place-items: center;
        border: none;
        min-width: var(--size);
        min-height: var(--size);
        border-radius: 100%;
        background: var(--bg_quiz);
        color: #fff;
        font-size: 1.125rem;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s ease-in-out all;
        list-style: none;
        &.active {
          background: var(--hoverAndActive);
          pointer-events: none;
        }
        &:hover {
          background: var(--hoverAndActive);
        }
      }
    }

    .question-container {
      display: flex;
      flex-flow: column wrap;
      align-items: center;

      .loader-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.25rem;
        .loader {
          --size: 3.125rem;
          width: var(--size);
          height: var(--size);
          border-radius: 100%;
          border: 0.1875rem solid var(--text_2);
          border-top-color: transparent;
          border-bottom-color: transparent;
          animation: rotate 2s ease-in-out alternate-reverse infinite;
        }
        span {
          display: inline-block;
          color: #fff !important;
          font-weight: bold;
        }
      }

      .text-question {
        color: var(--text-color);
        font-size: 2.1875rem;
        text-align: center;
        margin-block: 2.1875rem;
        width: 80%;
        animation: show 1s ease-in-out;
      }
      .options-container {
        display: grid;
        grid-template-columns: repeat(2, minmax(12.5rem, 1fr));
        gap: 1.25rem;
        width: 100%;
        overflow: hidden;
        .option {
          display: flex;
          justify-content: center;
          align-items: center;
          gap: 0.9375rem;
          padding: 1.25rem 0;
          position: relative;
          border: none;
          background: var(--bg_quiz);
          border-radius: calc(var(--radius) / 2);
          font-size: 1.125rem;
          font-weight: bold;
          color: #fff;
          cursor: pointer;
          animation: fadeIn 1s ease;
          .icon-option {
            position: absolute;
            right: 40px;
          }
          span {
            pointer-events: none;
          }
          &:hover {
            background: var(--hoverAndActive);
          }
          &.active {
            background: var(--hoverAndActive);
          }
        }
      }
    }

    .progress {
      color: #fff;
      font-weight: bold;
      align-self: center;
      margin-top: 20px;
    }

    .card {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      color: var(--text_2);
      animation: scale 0.5s ease;

      .legend {
        font-size: 1.5625rem;
        margin-block: 1.25rem;
      }
      .score {
        font-size: 1.25rem;
      }

      .scoreboard {
        width: 100%;
        max-width: 31.25rem;
        max-height: 12.5rem;
        overflow-y: scroll;
        margin-block: 1.25rem;
        &::-webkit-scrollbar {
          appearance: none;
        }
        &::-webkit-scrollbar:vertical {
          width: 5px;
        }
        &::-webkit-scrollbar-thumb {
          background: var(--text_2);
          border-radius: 10px;
        }
        .list-score {
          padding: 0.625rem;
          display: flex;
          flex-direction: column;
          gap: 0.625rem;
          position: relative;
          .list-item-score {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: var(--bg_quiz);
            list-style: none;
            padding: 0.625rem 0.9375rem;
            border-radius: var(--radius);
            width: 100%;
            .name {
              flex: 1;
            }
            .rank {
              flex: 0.5;
            }
            .currentScore {
              font-size: 1rem;
              font-weight: bold;
            }
          }
        }
      }
    }
  }

  @keyframes fadeIn {
    from {
      transform: translateX(6.25rem);
    }
  }

  @keyframes show {
    from {
      opacity: 0;
    }
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes scale {
    from {
      scale: 0;
    }
  }

  @media screen and (max-width: 772px) {
    :root {
      font-size: 15px;
    }
    .quiz {
      width: calc(100vw - 50px);

      .indicators {
        flex-wrap: nowrap;
        overflow-x: hidden;
        width: 50px;
        align-self: center;
        scroll-snap-type: x mandatory;
        scroll-behavior: smooth;
        .indicator {
          scroll-snap-align: center;
        }
      }
      .question-container {
        .text-question {
          font-size: 20px;
          width: 100%;
        }
        .options-container {
          grid-template-columns: 1fr;

          .option {
            scale: 0.9;
          }
        }
      }

      .card {
        img {
          width: 100%;
        }
        .legend,
        .score {
          font-size: inherit;
          text-align: center;
        }
        .btn-again {
          width: 100%;
          max-width: 31.25rem;
          font-size: inherit;
        }
      }
    }
  }
</style>
