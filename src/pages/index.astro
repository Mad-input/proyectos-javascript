---
import Layout from "../layouts/Layout.astro";
import "@fontsource/poppins";
import { projects } from "../data/data";
import Card from "../components/Card.astro";
import GithubLogo from "../components/GithubLogo.astro";
import Button from "../components/Button.astro";
---

<Layout title="Welcome to Astro.">
  <header>
    <h1>
      <div>
        <span class="item">2</span><span class="item">0</span>
      </div> proyectos con javascript (Challenge)
    </h1>
    <div class="user">
      <strong>By Miguel Contreras</strong>
      <Button url="https://github.com/Mad-input" title="GitHub">
        <GithubLogo class="logo" />
      </Button>
    </div>
  </header>
  <main>
    <div class="cards">
      {
        projects.map((project) => (
          <Card
            name={project.projectName}
            image={project.imageUrl}
            description={project.description}
            tecnologies={project.tecnologies}
            demoURL={project.demo}
          />
        ))
      }
    </div>
  </main>
</Layout>

