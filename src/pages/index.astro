    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 100px;
    align-items: center;
    color: var(--text-color);
    font-family: "Poppins", sans-serif;
  }

  header {
    h1 {
      text-align: center;
      font-size: 40px;
      text-transform: uppercase;
      margin-bottom: 20px;
      color: var(--text);
      & > div {
        color: #fff;
      }
      .item {
        display: inline-block;
        animation: transforms 1.5s alternate infinite ease-in-out;
        &:nth-child(2) {
          animation-delay: 500ms;
        }
      }
    }

    .user {
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 20px;
      .logo {
        vertical-align: top;
        width: 20px;
        aspect-ratio: inherit;
      }
    }
  }
  main {
    max-width: 60%;
  }

  @keyframes transforms {
    to {
      transform: translateY(20px);
    }
  }
